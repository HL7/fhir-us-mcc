    <differential>
        <element id="Goal">
            <path value="Goal"/>
        </element>
        <element id="Goal.extension">
            <path value="Goal.extension"/>
            <slicing>
                <discriminator>
                    <type value="value"/>
                    <path value="url"/>
                </discriminator>
                <rules value="open"/>
            </slicing>
        </element>
        <element id="Goal.extension:goal-acceptance">
            <path value="Goal.extension"/>
            <sliceName value="goal-acceptance"/>
