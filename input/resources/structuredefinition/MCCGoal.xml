        </element>
        <element id="Goal.expressedBy">
            <path value="Goal.expressedBy"/>
            <mustSupport value="true"/>
        </element>
        <element id="Goal.addresses">
            <path value="Goal.addresses"/>
            <mustSupport value="true"/>
        </element>
        <element id="Goal.outcomeReference">
            <path value="Goal.outcomeReference"/>
            <mustSupport value="true"/>
        </element>
