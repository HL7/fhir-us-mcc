<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition
    xmlns="http://hl7.org/fhir">
    <id value="MCCSymptomObservation"/>
    <meta>
        <versionId value="34"/>
        <lastUpdated value="2022-11-16T21:55:32.887+00:00"/>
        <source value="#UkiqRUslHIwSEQhR"/>
    </meta>
    <url value="http://hl7.org/fhir/us/mcc/StructureDefinition/MCCSymptomObservation"/>
    <name value="MCCSymptomObservation"/>
    <title value="Multiple Chronic Condition Care Plan Symptom Observation"/>
    <status value="active"/>
    <description value="This profile constrains [FHIR R4.0.1 Observation](http://hl7.org/fhir/R4/observation.html) creating a symptom profile for use in the MCC FHIR Care Plan or other FHIR Care Plans."/>
    <fhirVersion value="4.0.1"/>
    <kind value="resource"/>
    <abstract value="false"/>
    <type value="Observation"/>
    <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Observation"/>
    <derivation value="constraint"/>
    <differential>
        <element id="Observation">
            <path value="Observation"/>
        </element>
        <element id="Observation.extension">
            <path value="Observation.extension"/>
            <slicing>
                <discriminator>
                    <type value="value"/>
                    <path value="url"/>
                </discriminator>
                <rules value="open"/>
            </slicing>
        </element>
        <element id="Observation.extension:pertainsToGoal">
            <path value="Observation.extension"/>
            <sliceName value="pertainsToGoal"/>
            <short value="The pertains To Goal extension allows any resource to reference a related goal"/>
            <type>
                <code value="Extension"/>
                <profile value="http://hl7.org/fhir/StructureDefinition/resource-pertainsToGoal"/>
            </type>
            <mustSupport value="true"/>
        </element>
        <element id="Observation.category">
            <path value="Observation.category"/>
            <short value="Symptom Category: The Observation.category binding to LOINC 75325-1 &quot;Symptom&quot; may help some systems identify that an instance of this profile is communicating a symptom. There is currently no FHIR &quot;Symptom&quot; code in the observation.category value set"/>
            <mustSupport value="true"/>
        </element>
        <element id="Observation.category.coding.system">
            <path value="Observation.category.coding.system"/>
            <fixedUri value="http://loinc.org"/>
            <mustSupport value="true"/>
        </element>
        <element id="Observation.category.coding.code">
            <path value="Observation.category.coding.code"/>
            <label value="Symptom"/>
            <short value="Symptom"/>
            <fixedCode value="75325-1"/>
            <mustSupport value="true"/>
        </element>
        <element id="Observation.code">
            <path value="Observation.code"/>
            <short value="MCC Symptom Value Sets may be used at this Observation.code element found on the MCC Symptom Value Sets page in this IG. The value sets are derived from SNOMED CT"/>
            <mustSupport value="true"/>
            <binding>
                <strength value="example"/>
                <description value="MCC Symptom Value Sets"/>
            </binding>
        </element>
        <element id="Observation.code.coding">
            <path value="Observation.code.coding"/>
            <max value="*"/>
        </element>
        <element id="Observation.subject">
            <path value="Observation.subject"/>
            <min value="1"/>
            <max value="1"/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://hl7.org/fhir/us/core/StructureDefinition/us-core-patient"/>
            </type>
            <mustSupport value="true"/>
        </element>
        <element id="Observation.effective[x]">
            <path value="Observation.effective[x]"/>
            <min value="1"/>
            <max value="1"/>
            <mustSupport value="true"/>
        </element>
    </differential>
</StructureDefinition>